<ul class='post-list'>
  {{#each posts}}
    <li>
      <article class='post'>
        <div class='postTitle'>
          <a href='/post/{{id}}'>{{recipe_name}}</a>
        </div>

        <div>
          <img src='images/{{filename}}' />
        </div>

        <div class='postCreator'>
          by
          {{user.username}}
          on
          {{format_date created_at}}
        </div>

        <div class='postCategory'>
          Category:
          {{category.category_name}}
        </div>

      </article>
    </li>
  {{/each}}
</ul>