<div class='container-fluid'>
  <div class='row justify-content-evenly'>
    <div class='login-card col-4'>
      {{! <h2 class="page-title">Login</h2> }}
      <form class='form login-form'>
        <div class='form-group'>
          <label for='user-login'>Username:</label>
          <input class='form-input' type='text' id='user-login' />
        </div>
        <div class='form-group'>
          <label for='password-login'>Password:</label>
          <input class='form-input' type='password' id='password-login' />
        </div>
        <div class='form-group'>
          <button class='btn' type='submit'>Login</button>
        </div>
      </form>
    </div>

    <div class='signup-card col-4'>
      {{! <h2 class="page-title">Signup</h2> }}
      <form class='form signup-form'>
        <div class='form-group'>
          <label for='username-signup'>Username:</label>
          <input class='form-input' type='text' id='username-signup' />
        </div>
        <div class='form-group'>
          <label for='password-signup'>Password:</label>
          <input class='form-input' type='password' id='password-signup' />
        </div>
        <div class='form-group'>
          <button class='btn' type='submit'>Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src='/js/login.js'></script>